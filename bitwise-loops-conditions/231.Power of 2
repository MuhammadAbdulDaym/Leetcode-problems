class Solution {
public:
    bool isPowerOfTwo(int n) {
        if (n < 1) {
            return 0;
        }
// as we know that every number who is power of 2 in binary form will have one 1 bit and remaining 0
        while (n != 1) {

            if (n % 2 == 1) {
                return 0;
            } else
                n = n / 2;
        }

        return 1;
    }
};
